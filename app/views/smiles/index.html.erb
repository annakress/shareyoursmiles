<h1>Listing smiles</h1>

<table>
  <tr>
    <th>Smiletext</th>
    <th>Username</th>
    <th>Country</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @smiles.each do |smile| %>
  <tr>
    <td><%= smile.smiletext %></td>
    <td><%= smile.username %></td>
    <td><%= smile.country %></td>
    <td><%= link_to 'Show', smile %></td>
    <td><%= link_to 'Edit', edit_smile_path(smile) %></td>
    <td><%= link_to 'Destroy', smile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

